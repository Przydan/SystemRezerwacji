@using Shared.DTOs.Resource
@model ResourceDto

@{
    ViewData["Title"] = "Szczegóły Zasobu";
}

<h1>Szczegóły</h1>

<div>
    <h4>Zasób</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Zdjęcie
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="@Model.Name" style="max-height: 200px; max-width: 100%;" class="img-thumbnail" />
            }
            else
            {
                <span class="text-muted">Brak zdjęcia</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Typ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResourceTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
             @(Model.IsActive ? "Tak" : "Nie")
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrator")) {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a> 
    }
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
