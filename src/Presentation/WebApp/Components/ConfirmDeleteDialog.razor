@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3" />
            <Potwierdzenie></Potwierdzenie>
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled">Anuluj</MudButton>
        <MudButton OnClick="Confirm" Color="@Color" Variant="Variant.Filled">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!; // Teraz ten typ zostanie rozpoznany

    [Parameter]
    public string ContentText { get; set; } = "Czy na pewno chcesz wykonać tę operację?";

    [Parameter]
    public string ButtonText { get; set; } = "Zatwierdź";

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}