@inherits LayoutComponentBase
@using SystemRezerwacji.WebApp.Shared 

<MudThemeProvider /> 
<MudDialogProvider /> 
<MudSnackbarProvider /> 

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudText Typo="Typo.h6" Class="ml-4">SystemRezerwacji</MudText> 
        <MudSpacer />
        <LoginDisplay /> 
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu /> 
    </MudDrawer>
    <MudMainContent Class="pt-16 px-4"> 
        <MudContainer MaxWidth="MaxWidth.False"> 
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true; // Domyślnie otwarty lub false dla domyślnie zamkniętego

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}