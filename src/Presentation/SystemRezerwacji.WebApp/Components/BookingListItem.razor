@namespace SystemRezerwacji.WebApp.Components
@using MudBlazor
@using SystemRezerwacji.WebApp.Models
@using Microsoft.AspNetCore.Components

<MudCard Class="mb-2">
  <MudCardContent>
    <div><b>Zasób:</b> @Item.ResourceName</div>
    <div><b>Start:</b> @Item.StartTime:g</div>
    <div><b>Koniec:</b> @Item.EndTime:g</div>
    <div><b>Status:</b> @Item.Status</div>
    <div><b>Użytkownik:</b> @Item.UserName</div>
    @if (!string.IsNullOrWhiteSpace(Item.Notes))
    {
      <div><b>Notatki:</b> @Item.Notes</div>
    }
  </MudCardContent>
</MudCard>

@code {
  [Parameter] public BookingDto Item { get; set; } = default!;
}