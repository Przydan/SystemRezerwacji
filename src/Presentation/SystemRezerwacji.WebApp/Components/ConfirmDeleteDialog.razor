@* @namespace SystemRezerwacji.WebApp.Components *@
@* @using MudBlazor *@
@* *@
@* <MudDialog> *@
@*     <MudDialogContent> *@
@*         <MudText Typo="Typo.h6">@ContentText</MudText> *@
@*     </MudDialogContent> *@
@*     <MudDialogActions> *@
@*         <MudButton Variant="Variant.Text" *@
@*                    Color="Color.Secondary" *@
@*                    OnClick="Cancel" *@
@*                    aria-label="@CancelText"> *@
@*             @CancelText *@
@*         </MudButton> *@
@*         <MudButton Variant="Variant.Filled" *@
@*                    Color="Color.Error" *@
@*                    OnClick="Submit" *@
@*                    aria-label="@ConfirmText"> *@
@*             @ConfirmText *@
@*         </MudButton> *@
@*     </MudDialogActions> *@
@* </MudDialog> *@
@* *@
@* @code { *@
@*     /// <summary> *@
@*     /// Serwis dialogowy do zarządzania interakcją z dialogiem. *@
@*     /// </summary> *@
@*     [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!; *@
@*      *@
@*     /// <summary> *@
@*     /// Tekst wyświetlany w treści dialogu. *@
@*     /// </summary> *@
@*     [Parameter] public string ContentText { get; set; } = "Czy na pewno?"; *@
@*      *@
@*     /// <summary> *@
@*     /// Tekst przycisku potwierdzającego. *@
@*     /// </summary> *@
@*     [Parameter] public string ConfirmText { get; set; } = "Tak"; *@
@*      *@
@*     /// <summary> *@
@*     /// Tekst przycisku anulującego. *@
@*     /// </summary> *@
@*     [Parameter] public string CancelText { get; set; } = "Nie"; *@
@* *@
@*     /// <summary> *@
@*     /// Obsługuje kliknięcie przycisku potwierdzającego. *@
@*     /// </summary> *@
@*     private void Submit() *@
@*     { *@
@*         MudDialog?.Close(DialogResult.Ok(true)); *@
@*     } *@
@* *@
@*     /// <summary> *@
@*     /// Obsługuje kliknięcie przycisku anulującego. *@
@*     /// </summary> *@
@*     private void Cancel() *@
@*     { *@
@*         MudDialog?.Cancel(); *@
@*     } *@
@* } *@