@model Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Strona Główna";
}

<div class="text-center mb-5">
    <h1 class="display-4">Witaj w Systemie Rezerwacji</h1>
    <p>Zarządzaj zasobami swojej firmy efektywnie i nowocześnie.</p>
</div>

@if (User.IsInRole("Administrator"))
{
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fa-solid fa-users text-primary fa-xl"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Użytkownicy</h5>
                    </div>
                    <h2 class="display-6 fw-bold mb-0">@Model.TotalUsers</h2>
                    <p class="text-muted small">Zarejestrowanych kont</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-outline-primary btn-sm stretched-link">Zarządzaj</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fa-solid fa-layer-group text-success fa-xl"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Zasoby</h5>
                    </div>
                    <h2 class="display-6 fw-bold mb-0">@Model.TotalResources</h2>
                    <p class="text-muted small">Dostępnych zasobów</p>
                    <a asp-controller="Resource" asp-action="Index" class="btn btn-outline-success btn-sm stretched-link">Zarządzaj</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                            <i class="fa-regular fa-calendar-check text-warning fa-xl"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Rezerwacje Dziś</h5>
                    </div>
                    <h2 class="display-6 fw-bold mb-0">@Model.ActiveBookingsToday</h2>
                    <p class="text-muted small">Zaplanowanych spotkań</p>
                    <a asp-controller="Bookings" asp-action="AdminIndex" class="btn btn-outline-warning btn-sm stretched-link">Zobacz wszystkie</a>
                </div>
            </div>
        </div>
    </div>
}
else if (User.Identity?.IsAuthenticated == true)
{
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold"><i class="fa-regular fa-clock text-primary me-2"></i>Moje Najbliższe Spotkania</h5>
                        <a asp-controller="Bookings" asp-action="Calendar" class="btn btn-sm btn-outline-primary rounded-pill"><i class="fa-regular fa-calendar me-1"></i> Kalendarz</a>
                    </div>
                </div>
                <div class="card-body px-4">
                    @if (Model.UpcomingBookings != null && Model.UpcomingBookings.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var booking in Model.UpcomingBookings)
                            {
                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1 text-dark fw-semibold">@booking.ResourceName</h6>
                                            <small class="text-muted"><i class="fa-regular fa-clock me-1"></i> @booking.StartTime.ToString("d MMMM, HH:mm") - @booking.EndTime.ToString("HH:mm")</small>
                                        </div>
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Potwierdzona</span>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3 text-center">
                            <a asp-controller="Bookings" asp-action="Index" class="btn btn-link text-decoration-none text-muted btn-sm">Zobacz wszystkie moje rezerwacje <i class="fa-solid fa-arrow-right ms-1"></i></a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3 text-muted opacity-50">
                                <i class="fa-regular fa-calendar-xmark fa-3x"></i>
                            </div>
                            <p class="text-muted mb-4">Brak nadchodzących rezerwacji.</p>
                            <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary px-4 rounded-pill">Zarezerwuj coś teraz</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <div class="card border-0 shadow-sm h-100 bg-primary text-white" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);">
                <div class="card-body p-4 d-flex flex-column justify-content-center text-center">
                    <h4 class="fw-bold mb-4">Szybka Akcja</h4>
                    <a asp-controller="Bookings" asp-action="Create" class="btn btn-light text-primary fw-bold btn-lg mb-3 shadow-sm rounded-pill">
                        <i class="fa-solid fa-plus me-2"></i>Nowa Rezerwacja
                    </a>
                    <a asp-controller="Resource" asp-action="Index" class="btn btn-outline-light btn-lg rounded-pill">
                        <i class="fa-solid fa-magnifying-glass me-2"></i>Przeglądaj Zasoby
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <p class="lead">Zaloguj się, aby rozpocząć rezerwowanie sal i sprzętu.</p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">Zaloguj się</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">Zarejestruj się</a>
        </div>
    </div>
}
</div>
