@using Shared.DTOs.Resource
@model IEnumerable<ResourceDto>

@{
    ViewData["Title"] = "Zasoby";
}

<h1>Zasoby</h1>

<div class="row mb-3">
    <div class="col-md-6">
        @if (User.IsInRole("Administrator"))
        {
            <p>
                <a asp-action="Create" class="btn btn-primary">Nowy Zasób</a>
            </p>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="row g-2">
             <div class="col-auto">
                <select name="resourceTypeId" class="form-select" asp-items="ViewBag.ResourceTypes">
                    <option value="">-- Wszystkie Typy --</option>
                </select>
            </div>
            <div class="col-auto">
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Szukaj..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-success">Szukaj</button>
                <a asp-action="Index" class="btn btn-outline-secondary">X</a>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Zdjęcie</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>Typ</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LocationSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Location)
                </a>
            </th>
            <th>
                 <a asp-action="Index" asp-route-sortOrder="@ViewData["CapacitySortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(model => model.Capacity)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" alt="@item.Name" style="max-height: 50px; max-width: 50px;" />
                }
                else
                {
                    <span class="text-muted">Brak</span>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.ResourceTypeName)</td>
            <td>@Html.DisplayFor(modelItem => item.Location)</td>
            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                <a asp-controller="Bookings" asp-action="Create" asp-route-resourceId="@item.Id" class="btn btn-primary btn-sm">Rezerwuj</a>
            </td>
        </tr>
}
    </tbody>
</table>
