@model Shared.DTOs.Booking.BookingRequestDto

@{
    ViewData["Title"] = "Nowa Rezerwacja";
}

<h1>Nowa Rezerwacja</h1>

<h4>Szczegóły Rezerwacji</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="ResourceId" class="control-label">Zasób</label>
                <select asp-for="ResourceId" class="form-control" asp-items="ViewBag.Resources">
                    <option value="">-- Wybierz Zasób --</option>
                </select>
                <span asp-validation-for="ResourceId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="StartTime" class="control-label">Początek</label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EndTime" class="control-label">Koniec</label>
                <input asp-for="EndTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Uwagi</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Recurrence Options -->
            <div class="form-check mb-3">
                <input asp-for="IsRecurring" class="form-check-input" id="IsRecurring" />
                <label asp-for="IsRecurring" class="form-check-label">Powtarzaj tę rezerwację?</label>
            </div>

            <div id="recurrenceOptions" style="display:none;" class="p-3 mb-3 bg-light rounded border">
                <h6 class="mb-3">Opcje powtarzania</h6>
                
                <div class="form-group mb-3">
                    <label asp-for="Frequency" class="control-label">Częstotliwość</label>
                    <select asp-for="Frequency" class="form-select">
                        <option value="Daily">Codziennie</option>
                        <option value="Weekly">Co tydzień</option>
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Occurrences" class="control-label">Ile razy? (wliczając to spotkanie)</label>
                    <input asp-for="Occurrences" class="form-control" type="number" min="2" max="20" value="2" />
                    <small class="text-muted">Maksymalnie 20 powtórzeń.</small>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Rezerwuj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Recurrence Toggle
            $("#IsRecurring").change(function() {
                if(this.checked) {
                    $("#recurrenceOptions").slideDown();
                } else {
                    $("#recurrenceOptions").slideUp();
                }
            });

            // Auto-calculate EndTime logic (existing)
            $("#StartTime").change(function () {
                var startTimeVal = $(this).val();
                if (startTimeVal) {
                    var startDate = new Date(startTimeVal);
                    // Add 1 hour by default (adjusted from 24h as 1h is more standard for meeting)
                    // Or keep 1 day if that was intentional? Previous code was 24h (1 day).
                    // Let's change to 1 HOUR as it is more typical for bookings, unless it's a rental system.
                    // User previous code: 24 * 60 * 60 * 1000 = 1 day.
                    // Let's stick to 1 hour for better UX? Or keep as is? 
                    // Let's change to 1 hour (3600*1000) for standard meetings.
                    var endDate = new Date(startDate.getTime() + (60 * 60 * 1000));
                    
                    var tzOffset = endDate.getTimezoneOffset() * 60000; 
                    var localISOTime = (new Date(endDate - tzOffset)).toISOString().slice(0, 16);
                    
                    $("#EndTime").val(localISOTime);
                }
            });
        });
    </script>
}
