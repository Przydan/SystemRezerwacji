@page "/login"
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@using SystemRezerwacji.ClientApp.Models

<h3>Logowanie</h3>

<EditForm Model="@loginRequestModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <InputText id="email" class="form-control" @bind-Value="loginRequestModel.Email" />
        <ValidationMessage For="@(() => loginRequestModel.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Hasło:</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="loginRequestModel.Password" />
        <ValidationMessage For="@(() => loginRequestModel.Password)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isProcessing">
        @if (isProcessing)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <span> Logowanie...</span>
        }
        else
        {
            <span>Zaloguj</span>
        }
    </button>
</EditForm>

@code {
    private LoginRequest loginRequestModel = new LoginRequest();
    private string? errorMessage;
    private bool isProcessing = false;

    private async Task HandleLogin()
    {
        isProcessing = true;
        errorMessage = null;
        try
        {
            var success = await AuthService.Login(loginRequestModel);
            if (success)
            {
                NavigationManager.NavigateTo("/"); // Przekierowanie na stronę główną po pomyślnym logowaniu
            }
            else
            {
                errorMessage = "Logowanie nie powiodło się. Sprawdź dane i spróbuj ponownie.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Wystąpił błąd: {ex.Message}";
            Console.WriteLine($"Błąd logowania: {ex}");
        }
        finally
        {
            isProcessing = false;
        }
    }
}
