@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider>
  <MudDialogProvider>
    <MudSnackbarProvider>

      <!-- Górny pasek aplikacji -->
      <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-2">Aplikacja Rezerwacyjna</MudText>
      </MudAppBar>

      <!-- Pasek nawigacji / menu -->
      <MudDrawerContainer>
        <MudDrawer Anchor="Anchor.Left" Variant="DrawerVariant.Responsive" Elevation="1">
          <NavMenu />  @* Twój komponent NavMenu powinien być w Client/Shared/NavMenu.razor *@
        </MudDrawer>

        <!-- Główna zawartość stron -->
        <MudMainContent>
          @Body
        </MudMainContent>
      </MudDrawerContainer>

    </MudSnackbarProvider>
  </MudDialogProvider>
</MudThemeProvider>